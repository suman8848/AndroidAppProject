<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/holo_green_light">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/car_home"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:text="Add files through camera"
                android:layout_height="wrap_content"
                android:gravity="end" />
<!--
            <ImageView
                android:id="@+id/post_image_camera"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="20dp"
                android::src="@drawable/ic_photo_camera_black"
                android:clickable="true"
                android:onClick="camera"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:text="Browse to add Files"
                android:layout_height="wrap_content"
                android:gravity="end" />

           <!-- <ImageView
                android:id="@+id/post_image_browse"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="20dp"
                android:src="@drawable/ic_open_in_browser_black"
                android:clickable="true"
                android:onClick="gallery"/>-->

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/layout_fill_in_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:layout_margin="@dimen/dp_8"/>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="Enter Your Car Name Here"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/lightGrey"
                        android:background="@drawable/bg_edittextview"
                        android:textSize="14sp"
                        android:layout_margin="@dimen/dp_8"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Make(Year):"/>

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="Enter Year Here"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/lightGrey"
                        android:background="@drawable/bg_edittextview"
                        android:layout_margin="@dimen/dp_8"
                        android:textSize="14sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Model: "/>

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="Enter Model Here"
                        android:layout_margin="@dimen/dp_8"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/lightGrey"
                        android:background="@drawable/bg_edittextview"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Color: "/>

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:background="@drawable/bg_edittextview"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="Enter Color Here"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp"
                        android:layout_margin="@dimen/dp_8"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Mileage: "/>

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="Enter Mileage"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/lightGrey"
                        android:background="@drawable/bg_edittextview"
                        android:layout_margin="@dimen/dp_8"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Price: "/>

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="Enter Price Here"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/lightGrey"
                        android:background="@drawable/bg_edittextview"
                        android:layout_margin="@dimen/dp_8"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>